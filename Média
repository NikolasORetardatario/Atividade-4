programa
{
	
	funcao inicio()
	{
		inteiro nota1
		inteiro nota2
		inteiro nota3
		inteiro nota4
		inteiro total
		inteiro media

		escreva("Primeira nota?: ")
		leia(nota1)

		escreva("Segunda nota?: ")
		leia(nota2)

		escreva("Terceira nota?: ")
		leia(nota3)

		escreva("Quarta nota?: ")
		leia(nota4)

		total = nota1 + nota2 + nota3 + nota4
		media = total / 4

		escreva("Sua nota final: ", media = total / 4)
	}
}
